<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyLogin" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">@color/grr</item>

        <item name="colorControlActivated">@color/grr</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/grr</item>
        <item name="android:textSize">14dp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/grr</item>
        <item name="colorControlNormal">@color/grr</item>
        <item name="colorControlActivated">@color/grr</item>
    </style>

    <style name="MyThemeOverlay" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>

    </style>


    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/yello</item>
        <item name="colorButtonNormal">@color/yello</item>

    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>


    <style name="CustomTitleTextAppearanceb">
        <item name="android:textSize">11sp</item>

    </style>


    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">#000000</item>
    </style>


    <style name="MyRadioButton1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#009688</item>
        <item name="colorControlActivated">#009688</item>
    </style>




    <style name="AlertDialogCustom" parent="android:Theme.Material.Dialog.Alert">

        <item name="android:colorAccent">@color/colorPrimary</item>

    </style>

</resources>
